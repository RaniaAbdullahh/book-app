<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../../layout/head') %>
    <title>Show Book</title>
  </head>
<style>
  #bookTitle,#author,#thumnail,#ISBN,#description,#bookshelf{
    display: none;
  }
</style>
  <body>
    <header>
      <%- include('../../layout/header.ejs')%>
    </header>
    <main>
      <ul>
        <% bookDetails.forEach(item=>{ %>
<section class="resultDetails">
          <img src="<%= item.thumnail %>" />

          <h2><%= item.BookTitle %></h2>

          <h4><%= item.AuthorName %></h3>

          <p><%= item.BookDescription %></p>

          <p><%= item.ISBN %></p>

          <p><%= item.bookshelf %></p>
          <br />
          <form action="/books" method="post">
            <input id="bookTitle" type="text"value="<%= item.BookTitle %>"name="bookTitle"/>
            <input id="author" type="text" value="<%= item.AuthorName %>" name="author"/>
            <input id="thumnail" type="text" value="<%= item.thumnail %>" name="thumnail"/>
            <input id="ISBN" type="text" value="<%= item.ISBN %>" name="ISBN"/>
            <input id="description" name="description" value = "<%= item.BookDescription %>"/>
            <input id="bookshelf" type="text" value="<%= item.bookshelf %>" name="bookshelf"/>
            <button class="submit">Select This Book</button>
          </form>
        </section>
        <% }); %>
      </ul>
    </main>
    <script src="https://code.jquery.com/jquery-3.1.1.min.js"></script>
    <script src="../js/app.js"></script>
  </body>
</html>
