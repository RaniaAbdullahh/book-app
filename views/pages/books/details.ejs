<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../../layout/head.ejs') %>
    <title>Book</title>
</head>

<body>


    <header>
        <%- include('../../layout/header.ejs')%>
    </header>


    <section class="resultDetails">
        <img src=" <%= Details.image_url%>" /><br>
        <h2>
            <%= Details.title%><br />
        </h2><br>
        <h4>
            <%= Details.author %>
        </h4><br>
        <p><%= Details.description%></p>
        <p>
            <%= Details.isbn %>
        </p><br>
        <p>
            <%= Details.bookshelf %>
        </p><br>

        <button class="upd-btn">Update Deatils</button>
        
        <form action="/books/<%= Details.id %>?_method=DELETE" method="POST">
            <input type="submit" value="Delete Book" class="del-btn">
        </form>

    </section>
    <section class="form-container">
        <form class="form-styling" action="/books/<%= Details.id %>?_method=put" method="post">
            <input class="input-update" type="text" name="bookname" value="<%= Details.title %>"
                placeholder="Title"><br>
            <input class="input-update" type="text" name="bookauthor" value="<%= Details.author %>"
                placeholder="Author"><br>
            <input class="input-update" type="text" name="bookISBN" value="<%= Details.isbn %>" placeholder="isbn"><br>
            <input class="input-update" type="text" name="image_url" value="<%= Details.image_url %>"
                placeholder="Image Url"><br>
            <textarea type="text" class="update-text-area" name="bookdesc"
                placeholder="description"><%= Details.description %></textarea><br>
            <input class="input-update" type="text" name="bookcat" value="<%= Details.bookshelf %>"
                placeholder="bookshelf"><br>
            <button class="btn" type="submit">Update Book</button>
        </form>
    </section>




    <script src="https://code.jquery.com/jquery-3.1.1.min.js"></script>
    <script src="../js/app.js"></script>
</body>

</html>